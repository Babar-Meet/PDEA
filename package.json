{
  "name": "yt-local-electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run backend\" \"wait-on http://localhost:5000 && electron .\"",
    "build-frontend": "cd frontend && npm run build",
    "backend": "cd backend && npm start",
    "frontend": "cd frontend && npm run dev",
    "build": "npm run build-frontend && electron-builder"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^28.1.0",
    "wait-on": "^7.2.0"
  }
}